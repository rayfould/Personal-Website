---
import Particles from 'astro-particles';
import type { ISourceOptions } from 'tsparticles-engine';

const options: ISourceOptions = {
  background: {
    color: {
      value: '#000000',
    },
  },
  fullScreen: {
    enable: true,
    zIndex: -1,
  },
  fpsLimit: 120,
  particles: {
    number: {
      value: 80,
      density: {
        enable: true,
        area: 800,
      },
    },
    color: {
      value: '#ffffff',
    },
    shape: {
      type: 'circle',
    },
    opacity: {
      value: 0.5,
    },
    size: {
      value: { min: 1, max: 3 },
    },
    links: {
      enable: true,
      distance: 150,
      color: '#ffffff',
      opacity: 0.4,
      width: 1,
    },
    move: {
      enable: true,
      speed: 1.5,
      direction: 'none',
      random: false,
      straight: false,
      outModes: {
        default: 'out',
      },
    },
  },
  interactivity: {
    detectsOn: 'canvas',
    events: {
      onHover: {
        enable: true,
        mode: 'repulse',
      },
      onClick: {
        enable: true,
        mode: 'push',
      },
      resize: {
        enable: true,
      },
    },
    modes: {
      repulse: {
        distance: 140,
        duration: 0.4,
      },
      push: {
        quantity: 4,
      },
    },
  },
  detectRetina: true,
};
---

<Particles id="tsparticles" options={options} init="particlesInit" />

<script>
  import { loadFull } from 'tsparticles';

  window.particlesInit = async function (engine) {
    await loadFull(engine);
  };
</script>

