    <div class="education-layout">
      <div class="image-column" data-spotlight>
        <img src="/images/bu4.webp" alt="Boston University" class="base-image" />
        <div class="overlay"></div>
        <div class="brightness-spot"></div>
      </div>
      
      <div class="text-column">
        <h3>Boston University</h3>
