<style>
  section {
    min-height: 100vh;
    padding: 4rem 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 3rem;
    text-align: center;
    color: white;
  }

  .education-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
    margin-bottom: 5rem;
  }

  .education-layout:last-child {
    margin-bottom: 0;
  }

  .education-layout:nth-child(3) {
    direction: rtl;
  }

  .education-layout:nth-child(3) > * {
    direction: ltr;
  }

  .image-column {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 3;
    border-radius: 12px;
    overflow: hidden;
    cursor: none;
    border: 2px solid #444;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5),
                0 0 0 1px rgba(255, 255, 255, 0.4);
    transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275), 
                border-color 0.3s ease, 
                box-shadow 0.3s ease;
  }

  .image-column:hover {
    transform: scale(1.05);
    border-color: #ff0040;
    box-shadow: 0 25px 60px rgba(0, 0, 0, 0.6),
                0 0 20px rgba(255, 0, 64, 0.6),
                0 0 40px rgba(255, 0, 64, 0.4),
                0 0 60px rgba(255, 0, 64, 0.2),
                inset 0 0 20px rgba(255, 0, 64, 0.1);
  }

  .base-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.75);
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .brightness-spot {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .image-column:hover .brightness-spot {
    opacity: 1;
  }

  .text-column {
    color: white;
    padding: 2rem;
    border-left: 2px solid #444;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .education-layout:nth-child(3) .text-column {
    border-left: none;
    border-right: 2px solid #444;
  }

  .text-column h3 {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: white;
  }

  .degree {
    font-size: 1.25rem;
    color: #aaa;
    margin: 0 0 0.5rem 0;
  }

  .year {
    font-size: 1rem;
    color: #888;
    margin: 0 0 1.5rem 0;
  }

  .description {
    font-size: 1rem;
    line-height: 1.8;
    color: #ccc;
    margin: 0;
  }

  @media (max-width: 900px) {
    .education-layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .image-column {
      max-width: 600px;
      margin: 0 auto;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const spotlights = document.querySelectorAll('[data-spotlight]');
    
    spotlights.forEach((spotlight) => {
      const overlay = spotlight.querySelector('.overlay');
      const brightnessSpot = spotlight.querySelector('.brightness-spot');
      if (!overlay || !brightnessSpot) return;

      spotlight.addEventListener('mousemove', (e) => {
        const rect = spotlight.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;

        // Sharper mask with less feathering
        overlay.style.maskImage = `radial-gradient(circle 100px at ${x}px ${y}px, transparent 0%, transparent 85%, black 100%)`;
        overlay.style.webkitMaskImage = `radial-gradient(circle 100px at ${x}px ${y}px, transparent 0%, transparent 85%, black 100%)`;
        
        // Brightness boost in revealed area
        brightnessSpot.style.background = `radial-gradient(circle 100px at ${x}px ${y}px, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0.15) 50%, transparent 100%)`;
      });

      spotlight.addEventListener('mouseenter', () => {
        overlay.style.maskImage = '';
        overlay.style.webkitMaskImage = '';
      });

      spotlight.addEventListener('mouseleave', () => {
        overlay.style.maskImage = '';
        overlay.style.webkitMaskImage = '';
        brightnessSpot.style.background = '';
      });
    });
  });
</script>

