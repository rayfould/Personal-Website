  }

  @keyframes gradient-shift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .subtext {
    font-size: 1.25rem;
    line-height: 1.8;
    color: #b0b0b0;
    margin-bottom: 2.5rem;
  }

  .status-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
