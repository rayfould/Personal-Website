  }

  .gradient-text {
    background: linear-gradient(135deg, rgb(153, 82, 228), rgb(255, 107, 237), rgb(153, 82, 228));
    background-size: 200% 200%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-shift 4s ease infinite;
    position: relative;
    display: inline-block;
    cursor: pointer;
  }

  .gradient-text::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 4px;
    background: linear-gradient(90deg, rgb(153, 82, 228), rgb(255, 107, 237));
    transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .gradient-text:hover::after {
