---
import '../styles/globals.css';
import Navigation from '@/components/layout/Navigation.astro';
import HomeSection from '@/components/sections/HomeSection.astro';
import ProjectsSection from '@/components/sections/ProjectsSection.astro';
import TimelineSection from '@/components/sections/TimelineSection.astro';
import EducationSection from '@/components/sections/EducationSection.astro';
import AboutMeSection from '@/components/sections/AboutMeSection.astro';
import ReachOutSection from '@/components/sections/ReachOutSection.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portfolio</title>
  </head>
  <body>
    <a href="#home" class="portfolio-logo">
      <img src="/images/logo/rdy_logo_white.png" alt="Portfolio Logo" />
    </a>
    <div class="home-wrapper">
      <HomeSection />
      <Navigation />
    </div>
    <main>
      <ProjectsSection />
      <TimelineSection />
      <EducationSection />
      <AboutMeSection />
      <ReachOutSection />
    </main>
  </body>
  
  <style>
    .portfolio-logo {
      position: fixed;
      top: 1.5rem;
      left: 1.5rem;
      z-index: 9999;
      transition: opacity 0.3s;
    }

    .portfolio-logo img {
      height: 1.5rem;
      width: auto;
      display: block;
    }

    .portfolio-logo:hover {
      opacity: 0.8;
    }

    .home-wrapper {
      position: relative;
      min-height: 110vh;
    }
  </style>
</html>
